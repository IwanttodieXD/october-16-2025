@{
    ViewData["Title"] = "Divide by 3 :D";
}
<h1 class="text-center text-primary">Is the number divisible by 3?</h1>

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4 w-100" style="max-width: 500px;">

        <form asp-action="Div3" method="post" class="mb-4">
            <div class="mb-3">
                <label for="num" class="form-label">Enter the number:</label>
                <input type="number" name="num" placeholder="Put number here" class="form-control text-center" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

        <h4 class="text-center">@ViewBag.msg</h4>

        <div class="d-flex justify-content-center gap-3">
            <form asp-action="LoadDashboard" method="post">
                <button type="submit" class="btn btn-danger">Back</button>
            </form>
            <form asp-action="LoadGallery" method="post">
                <button type="submit" class="btn btn-primary">Next</button>
            </form>
        </div>

    </div>
</div>
